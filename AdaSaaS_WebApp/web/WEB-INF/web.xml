<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>SaveText</servlet-name>
        <servlet-class>Controller.SaveTextServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetScript</servlet-name>
        <servlet-class>Controller.GetScriptServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CompileServlet</servlet-name>
        <servlet-class>Controller.CompileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExecServlet</servlet-name>
        <servlet-class>Controller.ExecServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SaveText</servlet-name>
        <url-pattern>/save_text.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetScript</servlet-name>
        <url-pattern>/get_script.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CompileServlet</servlet-name>
        <url-pattern>/compile.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExecServlet</servlet-name>
        <url-pattern>/execute.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
